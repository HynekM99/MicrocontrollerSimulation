<Window x:Class="MicrocontrollerSimulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicrocontrollerSimulation"
        xmlns:vms="clr-namespace:MicrocontrollerSimulation.ViewModels"
        xmlns:views="clr-namespace:MicrocontrollerSimulation.Views"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="450" 
        Width="800" 
        MinHeight="400"
        MinWidth="500"
        Background="#FF1D1D1D" 
        FontSize="14" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu
            Grid.Row="0">
            <MenuItem
                Header="_Soubor">
                <MenuItem 
                    Header="Nový projekt"
                    Command="{Binding NewProjectCommand}"/>
                <MenuItem 
                    Header="Otevřít projekt"
                    Command="{Binding OpenProjectCommand}"/>
                <MenuItem 
                    Header="Uložit projekt"
                    Command="{Binding SaveProjectCommand}"/>
            </MenuItem>
        </Menu>
        <Grid
            Grid.Row="1">
            <Grid.Resources>
                <DataTemplate DataType="{x:Type vms:MainViewModel}">
                    <views:MainView/>
                </DataTemplate>
            </Grid.Resources>
            <ContentControl Content="{Binding CurrentViewModel}"/>
        </Grid>
    </Grid>
</Window>
