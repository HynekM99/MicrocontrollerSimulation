<UserControl x:Class="MicrocontrollerSimulation.UserControls.ErrorMessageBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicrocontrollerSimulation.UserControls"
             xmlns:fa="http://schemas.fontawesome.io/icons/" 
             xmlns:converters="clr-namespace:MicrocontrollerSimulation.ValueConverters"
             mc:Ignorable="d" 
             Foreground="#FFC70000">
    <StackPanel
        x:Name="stackPanel"
        Orientation="Horizontal"
        Visibility="Hidden">
        <fa:FontAwesome 
            Icon="ExclamationCircle" 
            Margin="5,0,5,0"
            VerticalAlignment="Center"/>
        <TextBlock 
            x:Name="textBlock"
            VerticalAlignment="Center"
            FontWeight="Medium"
            Text="{x:Null}"/>
    </StackPanel>
</UserControl>
