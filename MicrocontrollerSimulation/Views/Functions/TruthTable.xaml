<UserControl x:Class="MicrocontrollerSimulation.Views.Functions.TruthTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicrocontrollerSimulation.Views.Functions"
             mc:Ignorable="d">
    <Grid>
        <TextBlock
            x:Name="TextBlockTooManyInputs"
            Text="Počet vstupů funkce je pro vykreslení pravdivostní tabulky příliš vysoký."
            TextWrapping="Wrap"/>
        <Button
            x:Name="ButtonShow"
            Content="Zobrazit"
            HorizontalAlignment="Left"
            Padding="4,1"
            Style="{StaticResource LightButtonStyle}"
            ToolTip="Při vyšším počtu vstupů funkce se pravdivostní tabulka může vykreslovat delší dobu. &#x0a;Stiskem ji i přesto vykreslíte."
            ToolTipService.InitialShowDelay="100"
            Click="ButtonShow_Click"/>
        <Grid x:Name="mainGrid"/>
    </Grid>
</UserControl>
