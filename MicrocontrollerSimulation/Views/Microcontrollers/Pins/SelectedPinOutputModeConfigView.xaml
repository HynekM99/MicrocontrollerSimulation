<UserControl x:Class="MicrocontrollerSimulation.Views.Microcontrollers.Pins.SelectedPinOutputModeConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicrocontrollerSimulation.Views.Microcontrollers.Pins" 
             xmlns:fa="http://schemas.fontawesome.io/icons/" xmlns:usercontrols="clr-namespace:MicrocontrollerSimulation.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0">
            <TextBlock Text="Funkce"/>
            <usercontrols:SearchBar 
                SearchedExpression="{Binding SearchedFunctionName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <ListView
                Foreground="White"
                FontWeight="Regular"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                ItemsSource="{Binding SearchResults}"
                SelectedItem="{Binding SelectedFunctionName}"
                ItemContainerStyle="{StaticResource DeviceListViewItemStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
