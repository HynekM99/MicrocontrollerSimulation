<UserControl x:Class="MicrocontrollerSimulation.Views.Microcontrollers.Pins.SelectedPinInputModeConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicrocontrollerSimulation.Views.Microcontrollers.Pins"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0">
            <TextBlock Text="Zařízení" FontSize="14"/>
            <ListView
                FontWeight="Regular"
                Foreground="White"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                ItemsSource="{Binding AvailableDevices}"
                SelectedItem="{Binding SelectedDeviceType}"
                ItemContainerStyle="{StaticResource DeviceListViewItemStyle}"/>
        </StackPanel>
        <StackPanel 
            Grid.Row="1"
            Margin="0,5,0,0">
            <TextBlock Text="Frekvence" FontSize="14"/>
            <TextBox HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>
